// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider              = "mysql"
  url                   = env("DATABASE_URL")
  relationMode  = "prisma"
}

model User {
  id Int @id @default(autoincrement())
  email String? @unique
  name String 
  role String   //직책
  company String
  companyNumber String
  ticket Int @default(0)
  password String
  avatar String?
  phone String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
}

model Diagnosis {
  id Int @id @default(autoincrement())
  name String   //이름
  phone String  //폰
  alcohol String  //혈중알콜농도 (호흡 또는 체혈)
  license String    //면허취득년도 
  alcohol_history Boolean //과거 음주운전 전력
  demerit String //벌점
  distance String // 음주운전으로 이동한 거리
  crackDown String  //적발일자
  policeInterview String  //조사 날짜
  reason String //  불가피한 운전 사유
  job String  //직업 (월급, 월수입)
  need String //운전이 필요한 이유
  comment String //문의사항(면허구제,벌금감경,의견서작성 등)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id Int @id @default(autoincrement())
  title String
  thumbnail String
  notice Boolean 
  contents String @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notice {
  id Int @id @default(autoincrement())
  title String
  thumbnail String
  contents String @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Lecture {
  id Int @id @default(autoincrement())
  title String
  thumbnail String
  contents String @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Counsel {
  id Int @id @default(autoincrement())
  name String
  phone String
  contents String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}




